<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hl.batik.SVGPathAndroid.MainActivity">



    <com.hl.batik.SVGPathAndroid.ChinaMapView
        android:id="@+id/vp"
        android:background="#FFFF6F"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tbuttons"/>
    <LinearLayout
        android:id="@+id/tbuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/buttons"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="放大"
            android:id="@+id/fangda"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="向上"
            android:id="@+id/xiangshang"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="缩小"
            android:id="@+id/suoxiao"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/xbuttons"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="向左"
            android:id="@+id/xiangzuo"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="向下"
            android:id="@+id/xiangxia"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="向右"
            android:id="@+id/xiangyou"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/xbuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/option"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="复位"
            android:id="@+id/fuwei"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="原始大小"
            android:id="@+id/yaunshidaxiao"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="高亮四川"
            android:id="@+id/sichuan"
            android:background="#5cadad"
            android:textColor="#fff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="高亮内蒙"
            android:id="@+id/neimeng"
            android:background="#8f4586"
            android:textColor="#fff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="选中新疆"
            android:id="@+id/xinjiang"
            android:background="#0ff"
            android:textColor="#fff"
            />
    </LinearLayout>

</RelativeLayout>
